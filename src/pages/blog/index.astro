---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import { resolveImage } from '../../utils/resolveImage';
import SpotlightCard from '../../components/react/SpotlightCard';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const postsWithImages = await Promise.all(posts.map(async (post) => ({
	...post,
	resolvedHeroImage: await resolveImage(post.data.heroImage)
})));
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 100%;
				max-width: 960px;
				margin: 0 auto;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
				/* Remove default li behavior if any, but maintain width */
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			/* Update first child specific styles to target the SpotlightCard if needed */
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			
			/* Adjust image styling to work within SpotlightCard */
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
				width: 100%;
				height: auto;
				display: block;
			}

			/* Reset link display to block to fill the card */
			ul li a {
				display: block;
				height: 100%;
				padding: 1rem; /* Add padding inside the card */
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			.meta {
				display: flex;
				gap: 0.5em;
				color: rgb(var(--gray));
				font-size: 0.9em;
			}
			.tags {
				display: flex;
				gap: 0.5em;
				margin-top: 0.5em;
			}
			.tag {
				font-size: 0.7em;
				background: var(--gray-light);
				padding: 0.2em 0.6em;
				border-radius: 99px;
				color: var(--text-main);
				transition: all 0.2s ease;
				border: 1px solid rgba(var(--gray), 0.2);
			}
			.tag:hover {
				background: var(--accent);
				color: white;
				border-color: var(--accent);
			}
			.description {
				margin: 0.5em 0 0 0;
				font-size: 0.9em;
				color: var(--text-main);
				opacity: 0.9;
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						postsWithImages.map((post) => (
							<li>
                                <SpotlightCard client:visible>
                                    <a href={`/blog/${post.id}/`}>
                                        {post.resolvedHeroImage && (
                                            <Image width={720} height={360} src={post.resolvedHeroImage} alt="" />
                                        )}
                                        <h4 class="title">{post.data.title}</h4>
                                        <div class="meta">
                                            <p class="date">
                                                <FormattedDate date={post.data.pubDate} />
                                            </p>
                                            {post.data.editor && <span class="editor"> â€¢ Ed: {post.data.editor}</span>}
                                        </div>
                                        <p class="description">{post.data.description}</p>
                                        {post.data.tags && (
                                            <div class="tags">
                                                {post.data.tags.slice(0, 3).map((tag) => <span class="tag">#{tag}</span>)}
                                            </div>
                                        )}
                                    </a>
                                </SpotlightCard>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
